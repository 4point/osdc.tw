%section#news.home
	%h2
		News
		= link_to '/feed.xml' do
			%svg
				%use{"xlink:href" => "#feed"}
	- page_articles.each_with_index do |article, i|
		= partial(:news, :locals => {:article => article, :content => false})
%section#twitter
