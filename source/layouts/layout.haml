!!! 5
%html
	%head
		%meta{:charset => "utf-8"}
		%meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
		%meta{:property => "og:title", :content => "OSDC.TW 2014"}
		%meta{:property => "og:image", :content => "http://osdc.tw/images/logo.png"}
		%meta{:property => "og:description", :content => "Open Source Developers' Conference 2014 #{settings.day1} - #{settings.day2}"}
		%title= "OSDC.TW 2014 &mdash; " + current_page.data.title || "OSDC.TW 2014"
		= feed_tag :atom, "/feed.xml", title: "Atom Feed"
		= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Ubuntu:300,400,700"
		= stylesheet_link_tag "style"
		/= javascript_include_tag  "all"
	%body
		= partial 'header'
		%main#content
			.wrapper
				= yield
			- unless current_page.url == '/sponsors.html'
				%section#sponsor.wrapper
					%h2 Sponsors
					%ul
						- data.relation.sponsors.each do |link|
							%li.sponsor
								= link_to image_tag('sponsors/' + link.id + '.png', :alt => link.title), link.link
		= partial 'footer'