!!! 5
%html
	%head
		%meta{:charset => "utf-8"}
		%title= "OSDC.TW 2014 &mdash; " + current_page.data.title || "OSDC.TW 2014"
		= feed_tag :atom, "/feed.xml", title: "Atom Feed"
		= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Ubuntu:300,400,700"
		= stylesheet_link_tag "style"
		= javascript_include_tag  "all"
	%body
		= partial 'header'
		%main#content
			.wrapper
				= yield
			%section#sponsor.wrapper
				%h2 Sponsors
				%ul
					- data.relation.sponsors.each do |link|
						%li.sponsor
							= link_to image_tag('sponsors/' + link.id + '.png', :alt => link.title), link.link
		= partial 'footer'