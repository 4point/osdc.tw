---
title: Program
---

%section#program.page
	%header
		%time #{settings.send(day)} #{data.schedule.send(day)[program.time].time}
		%span.room #{settings.room[program.room]}
		%h2 #{program.title}
	.intro
		= simple_format program.intro
	- if program.video
		%iframe#video{:src => '//www.youtube.com/embed/' + program.video, :frameborder => 0, :allowfullscreen => true}
	- if program.slides
		#slides= slides(program.slides)
	- if speaker
		%footer.speaker
			%header
				= avatar speaker
				%h3.name= speaker.name
				%p.title= speaker.title
			%main.profile= simple_format speaker.profile